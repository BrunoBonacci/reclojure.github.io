{:tasks
 {:requires ([babashka.fs :as fs])
  clean
  {:doc "Clean generated files"
   :task (fs/delete-tree "_site" {:force true})}
  build
  {:doc "Generate files"
   :depends [clean]
   :task (do (fs/create-dir "_site")
             (fs/copy "CNAME" "_site/CNAME")
             (fs/copy-tree "resources" "_site"))}}}
